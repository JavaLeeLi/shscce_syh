.class-shop {
    width: 100%;
    background-color: gainsboro;
}

.class-shop-list {
    background-color: white;
    margin-bottom: 10px;
    padding: 0 10px 10px;
}

.class-shop-list-item-top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.class-shop-list-item-top-left {
    width: 15%;
    margin: 10px;
}

.class-shop-list-item-top-left-box {
    width: 40px;
    height: 100%;
    text-align: center;
    padding: 10px 0 0;
    background-color: red;
}

.class-shop-list-item-top-left-box-paimai {
    width: 40px;
    height: 100%;
    text-align: center;
    padding: 10px 0 0;
    background-color: black;
}

.class-shop-list-item-top-left-box-sell {
    width: 40px;
    height: 100%;
    text-align: center;
    padding: 10px 0 0;
    background-color: blue;
}

.class-shop-list-item-top-left-box image {
    width: 30px;
    height: 30px;
    display: inline-block;
}

.class-shop-list-item-top-left-box-sell image {
    width: 30px;
    height: 30px;
    display: inline-block;
}

.class-shop-list-item-top-left-box-paimai image {
    width: 30px;
    height: 30px;
    display: inline-block;
}

.class-shop-list-item-top-left-box::after {
    content: ' ';
    border: 20px solid white;
    border-bottom: transparent;
    border-top-left-radius: 60%;
    border-top-right-radius: 30%;
    position: relative;
    top: 15px;
}

.class-shop-list-item-top-left-box-paimai::after {
    content: ' ';
    border: 20px solid white;
    border-bottom: transparent;
    border-top-left-radius: 60%;
    border-top-right-radius: 30%;
    position: relative;
    top: 15px;
}

.class-shop-list-item-top-left-box-sell::after {
    content: ' ';
    border: 20px solid white;
    border-bottom: transparent;
    border-top-left-radius: 60%;
    border-top-right-radius: 30%;
    position: relative;
    top: 15px;
}

.class-shop-list-item-top-right {
    width: 85%;
    display: flex;
    align-items: center;
}

.class-shop-list-item-top-right-left {
    width: 53%;
    padding-right: 10px;
    font-size: 16px;
}

.class-shop-list-item-top-right-right {
    width: 47%;
    display: flex;
    align-items: center;
}

.class-shop-list-item-top-right-left-top {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.class-shop-list-item-top-right-left-botton {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

.class-shop-list-item-top-right-left-bootom-left {
    display: inline-block;
    color: red;
}

.class-shop-list-item-top-right-left-bootom-right {
    display: inline-block;
}

.class-shop-list-item-top-right-right-img image {
    width: 40px;
    height: 40px;
    border-radius: 100%;
    display: inline-block;
    margin-right: 15px;
}

.class-shop-list-item-top-right-right-box {
    font-size: 12px;
    color: #9e9e9e;
}

.class-shop-list-item-botton {
    height: 100px;
   white-space: nowrap;
   display:flex;
}

.class-shop-list-item-bottom-img {
    width: 110px;
    margin-right: 10px;
    display: inline-block;
}

.class-shop-list-item-bottom-img image {
    width: 100%;
    height: 5rem;
    border: 2px solid #9e9e9e;
    border-radius: 5px;
}

.class-shop-list-item-center {
    display: flex;
    justify-content: flex-end;
}

.class-shop-list-item-center-text {
    background-color: red;
    color: white;
    margin-top: 3px;
    display: inline-block;
}
.class-shop-img{
    width: 30%;
}