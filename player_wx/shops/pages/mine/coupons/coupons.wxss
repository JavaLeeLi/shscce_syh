.containers {
    background-color: white;
    font-size: 14px;
}

.coupons {
    width: 100%;
    margin-top: 5px;
    box-shadow: 0 0 2px 2px #9e9e9e;
   border: 1px solid #9e9e9e;
   margin-left:5px;
   margin-right: 5px;
   margin-bottom: 10px; 
}

.coupons-top {
    display: flex;
    width: 100%;
    justify-content: flex-start;
}

.coupons-top-left {
    width: 30%;
    background-color: red;

}
.top-left-value{
text-align: center;
margin-top: 10px;
}
.top-left-value-font{
    font-size: 30px;
}
.coupons-top-right{
    width: 60%;

}
.top-left-botton{
    text-align: center;
}
.coupons-top-left::before{
content: ' ';
position: absolute;
right: -100px;
border-left:16px solid;
border-right:10px solid transparent;
border-top:10px solid transparent;
border-bottom:10px solid transparent;
}
.coupons-top-right{
    width: 60%;
}
.coupons-top-right-use{
}
.top-right-use-top{
    width: 100%;
    display: block;
}

.top-right-use-botton{
    margin-top: 30px;
}
.navbar {
    display: flex;
    position: relative;
    z-index: 500;
    width: 100%;
    margin-bottom: 15px;
    padding: 0 10px;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid black;
    height: 60px;
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 0;
    bottom: 0;
    height: 3px;
    background-color: red;
    transition: transform 0.3s;
}

.navbar__title {
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 10rpx 0;
    text-align: center;
    font-size: 0;
    height: 48rpx;
    line-height: 48rpx;
}