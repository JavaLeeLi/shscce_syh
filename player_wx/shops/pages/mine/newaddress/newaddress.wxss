.input {
    padding-top: 20rpx;
    width: 100%;
    text-align: center;
}

.input input {
    width: 100%;
    background-color: #fff;
    padding: 20rpx 50rpx;
}

.section {
    padding-top: 20rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.citybody {
    width: 100%;
    height: 100%;
}

.citypicker {
    width: 100%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    background: #fafafa;
    margin: -150px 50rpx 0 0;
    border-radius: 3px;
    height: 100%;
}

.cityheader {
    display: flex;
    justify-content: space-between;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}
