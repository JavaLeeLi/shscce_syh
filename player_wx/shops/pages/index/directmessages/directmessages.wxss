/* pages/index/directmessages/directmessages.wxss */

.main {
    font-size: 14px;
    background-color: gray;
}

.msg {
    width: 100%;
    padding: 10px;
    display: flex;
    background-color: white;
    margin-bottom: 10px;
}
.msg-email{
       width: 100%;
    padding: 10px;
    display: flex;
    background-color: white;
    border-bottom: 1px solid black; 
}
.msg-left {
    width: 15%;
}

.msg-left-img {
    width: 40px;
    height: 40px;
}

.msg-left-img image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.msg-right {
    width: 80%;
    padding-right: 30px;
}

.msg-right-top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-left: 10px;
}

.sold-return {
    width: 100%;
    display: flex;
    height: 2.25rem;
    background-color: black;
    justify-content: flex-start;
    align-items: center;
}

.button-save {
    width: 90px;
    height: 2.25rem;
    background-color: black;
    color: white;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.sold-sell {
    color: white;
    width: 100%;
    text-align: center;
}

.return {
    width: 100%;
}

.sold-sell-save {
    width: 100%;
}

/*加号  */

.signadd {
    height: 40px;
    width: 40px;
    display: block;
    position: relative;
}

.demoSpan1:before, .demoSpan1:after {
    content: '';
    height: 3px;
    width: 20px;
    display: block;
    background: white;
    position: absolute;
    top: 14px;
    left: 0px;
}

.demoSpan1:after {
    height: 20px;
    width: 3px;
    top: 5px;
    left: 9px;
}

.msg-right-top-img {
    width: 30px;
    height: 30px;
}

.msg-right-top-img image {
    width: 100%;
    height: 100%;
}
