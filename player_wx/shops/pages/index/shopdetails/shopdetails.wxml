                                    <text class='package-list-item-top-text'> 优惠500元</text>
                                    <text class='package-list-item-top-text'>
                                        <text>现价</text>
                                        <text class='package-list-item-top-text-money'>500000.00</text>
                                    </text>
                                </view>
                            </view>
                            <view class='package-list-item-content'>
                                <view class='package-list-item-content-list'>
