.main {
    background-color: #cdcdb4;
    font-size: 14px;
    width: 100%;
    height: 3000px;
}

.commodity-header {
    display: flex;
    flex-flow: row nowrap;
    width: 100%;
    padding: 10px;
    justify-content: space-between;
    align-items: center;
}

.header-left {
    width: 70%;
    display: flex;
    flex-flow: row nowrap;
}

.header-left-img {
    display: flex;
    align-items: center;
}

.header-left-img image {
    width: 40px;
    height: 40px;
    border-radius: 100%;
    margin-right: 10px;
}

.header-right {
    width: 30%;
    display: flex;
    flex-flow: row nowrap;
}

.header-right-right {
    margin-left: 40%;
}

.swiper {
    height: 400rpx;
    width: 100%;
}

.swiper image {
    height: 100%;
    width: 100%;
}

.commodity-shuffling {
    border-top: 1px solid red;
    border-bottom: 1px solid red;
}

.commodity-detail {
    width: 100%;
}

.commodity-detail-top {
    display: flex;
    flex-flow: row nowrap;
    width: 100%;
    padding: 10px;

}
.commodity-detail-top-left{
    width: 15%;
}
.commodity-detail-top-left-img {
    margin-right: 10px;
}

.commodity-detail-top-left-img image {
    width: 40px;
    height: 40px;
    border-radius: 100%;
}



.top-right-bottom {
    width: 50%;
}
.commodity-detail-top-right{
    width: 80%;
}
.commodity-detail-top-right-bottom{
    display: flex;
    justify-content: space-between;
}
.detail-top-right-bottom-right {
    font-size: 14px;
    display: flex;

}
.detail-top-right-bottom{
    width: 100%;
}
.commodity-detail-center{
margin-top: 0.5rem;
}
.commodity-detail-item {
    
    background-color: white;
    padding: 10px;
    border-bottom: 1px solid black;
}

.commodity-detail-item-list {
    display: flex;
    justify-content: space-between;
}

.commodity-detail-matters{
    margin-top:15px; 
}
/*  定位*/

.commodity-submit {
    position: fixed;
    bottom: 200px;
    width: 100%;
    align-items: center;
    border-top: 1px solid red;
    display: flex;
    justify-content: space-between;
    text-align: center;
}

.weui-btn {
    width: 100%;
}

.btn {
    width: 80%;
    padding: 20rpx 0;
    border-radius: 10rpx;
    text-align: center;
    margin: 40rpx 10%;
    background: #000;
    color: #fff;
}
