/* pages/classification/screening/screening.wxss */

.weui-search-bar {
    position: relative;
    padding: 6px 10px;
    height: 52px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: black;
    border-top: 1rpx solid #d7d6dc;
    border-bottom: 1rpx solid #d7d6dc;
}

.weui-icon-search_in-box {
    position: absolute;
    left: 10px;
    top: 10px;
}

.weui-icon-search {
    position: absolute;
    left: 10px;
    top: 10px;
}

.weui-search-bar__input {
    height: 36px;
    line-height: 36px;
    font-size: 14px;
}

.weui-search-bar__text {
    position: absolute;
    top: 4px;
    left: 26px;
    font-size: 14px;
}

.weui-search-bar__form {
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    border-radius: 5px;
    background: #d7d6dc;
    border: 1rpx solid #e6e6ea;
}

.weui-search-bar__label {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 2;
    border-radius: 3px;
    text-align: center;
    color: #9b9b9b;
    background: #d7d6dc;
    line-height: 28px;
}

/*取消  */

.btn-cancel {
    background-color: #03a9f4;
    color: white;
    border-radius: 5px;
    padding: 5px;
}

/*筛选  */

.screening {
    width: 100%;
    padding: 10px;
    background-color: gray;
    margin-bottom: 10px;
}

.screening-s {
    display: flex;
    justify-content: space-between;
}

.screening-s-left {
    width: 50%;
    display: flex;
    justify-content: space-between;
}

.screening-s-right {
    width: 20%;
    display: flex;
    align-items: flex-end;
}

/*图标  */

.screening-s-left-bottom {
    display: flex;
    align-items: flex-end;
}

.demoSpan1 {
    height: 20px;
    width: 20px;
    display: block;
    position: relative;
}

.demoSpan1:before {
    content: '';
    height: 0;
    width: 0;
    display: block;
    border: 10px transparent solid;
    border-bottom-width: 0;
    border-top-color: white;
    position: absolute;
    top: 0px;
    left: 0px;
}

.home-shop {
    width: 100%;
    height: 100%;
}

.home-sell {
    width: 100%;
    display: flex;
    font-size: 14px;
    margin-bottom: 10px;
    background-color: white;
    padding: 0 10px 10px;
}

.sell-item {
    width: 100%;
    position: relative;
}

.sell-top {
    display: flex;
    width: 100%;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

.sell-top-left {
    width: 15%;
}

.sell-top-left-box {
    width: 40px;
    text-align: center;
    height: 100%;
    padding: 10px 0 0;
    background-color: red;
}

.sell-top-left-box image {
    width: 30px;
    height: 30px;
    display: inline-block;
}

.sell-top-left-box::after {
    content: ' ';
    border: 20px solid white;
    border-bottom: transparent;
    border-top-left-radius: 60%;
    border-top-right-radius: 30%;
    position: relative;
    top: 15px;
}

.sell-top-right {
    width: 85%;
    display: flex;
    align-items: center;
}

.top-right-botton {
    display: flex;
}

.top-right-left {
    width: 53%;
    padding-right: 10px;
    font-size: 16px;
}

.top-right-right {
    width: 47%;
    display: flex;
    align-items: center;
}

.top-right-right-img image {
    width: 40px;
    height: 40px;
    border-radius: 100%;
    display: inline-block;
    margin-right: 15px;
}

.sell-botton {
    width: 100%;
    display: flex;
    margin-top: 15px;
    flex-flow: row nowrap;
    align-items: center;
}

.sell-botton-img {
    position: relative;
    width: 30%;
    height: 5rem;
    margin-right: 2%;
    border: 2px solid #9e9e9e;
    border-radius: 5px;
    margin-left: 5%;
}

.sell-botton-img image {
    width: 100%;
    height: 100%;
}

.home-sell-bgk {
    background-color: gray;
}

.contentHeights {
    width: 100%;
    height: 100%;
}

/*拍卖商品  */

.auction-center {
    background-color: white;
    padding: 10px 15px;
}

.auction-center-top {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.auction-center-top-botton {
    color: red;
}

.auction-botton {
    background-color: black;
    overflow-x: auto;
    width: 100%;
    height: 100%;
}

.auction-botton-img {
    background-color: black;
    overflow-x: auto;
    width: 100%;
    height: 100%;
}

/*拍卖商品  */

.recommend_scroll_x_box {
    height: 265rpx;
    white-space: nowrap;
    display: flex;
    margin-top: 10px;
    margin-left: 10px;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.recommend_hot_box {
    width: 230rpx;
    height: 245rpx;
    margin-right: 44rpx;
    display: inline-block;
}

.recommend_hot_box-img {
    width: 120px;
}

.recommend_hot_image {
    width: 100%;
    height: 100px;
    border: 2px solid #9e9e9e;
}

.recommend_hot_box-money {
    color: white;
    text-align: center;
}

/*滚动数据  */

.swiper_container {
    height: 55rpx;
    width: 80vw;
}

.swiper_item {
    font-size: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 2px;
}

.swiper_item-list {
    display: flex;
    align-items: center;
    margin-top: 10px;
}

/*截止  */

.float-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: white;
}

.float-right view {
    background-color: red;
    height: 31px;
    margin-right: 10px;
}

.float-right text {
    width: 100%;
    padding-right: 25px;
}

.navbar {
    display: flex;
    position: relative;
    z-index: 500;
    width: 100%;
    margin-bottom: 15px;
    padding: 0 10px;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid black;
    height: 60px;
}

.navbar__slider {
    position: absolute;
    display: block;
    content: " ";
    left: 0;
    bottom: 0;
    height: 3px;
    background-color: red;
    transition: transform 0.3s;
}

.navbar__title {
    display: inline-block;
    font-size: 15px;
    max-width: 8em;
    text-align: center;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 10rpx 0;
    text-align: center;
    font-size: 0;
    height: 48rpx;
    line-height: 48rpx;
}

.navbar__item_on {
    color: red;
}

/*遮罩层  */

/*mask*/

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

/*content*/

.drawer_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    top: 5%;
    left: 0;
    z-index: 1001;
  
    border-radius: 3px;
}

.screen-up {
    width: 100%;
      background: white;
}

.screen-up-center {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.screen-up-left {
    width: 20%;
}

.screen-up-right {
    width: 80%;
    border-left: 1px solid black;
}

.screen-up-right-top {
    padding: 10px;
}

.screen-up-right-top-left {
    padding-left: 5px;
}

.hr {
    width: 100%;
    height: 1px;
    background-color: gray;
}

.screen-up-right-top-right {
    display: flex;
    flex-flow: row wrap;
}

.screen-up-right-top-bottom view {
    display: inline-block;
    padding: 0 6px;
    margin: 10px 10px 0 0;
    font-size: 14px;
}

.screen-up-bottom {
    width: 100%;
    display: flex;
    justify-content: space-between;
    color: white;
}

.screen-up-bottom-left {
    width: 40%;
    display: flex;
    justify-content: space-around;
    background-color: gray;
    align-items: center;
}

.screen-up-bottom-right {
    width: 60%;
    display: flex;
    justify-content: space-around;
    background-color: red;
    align-items: center;
    height: 50px;
}

.classadd {
    background-color: red;
    color: white;
    border: none;
}

.classborder {
    border: 1px solid black;
}
